{
    "extends": "./tsconfig.path.json",
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "baseUrl": "./",
        "rootDir": "./",
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "allowSyntheticDefaultImports": true,
        "keyofStringsOnly": true
    },
    "typeRoots": [
        "./node_modules/@types",
        "./src/@type"
    ],
    "paths": {
        "@src/*": [
            "src/*"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "**/node_modules",
        "**/.*/"
    ]
}